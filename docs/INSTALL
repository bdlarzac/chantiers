

###### postgresql ######
# dev version :
# psql --version
# psql (PostgreSQL) 10.12 (Ubuntu 10.12-0ubuntu0.18.04.1)

# cf config.yml pour le mot de passe

sudo apt install postgres
sudo -s -u postgres
psql

CREATE USER bdl;
ALTER ROLE bdl WITH CREATEDB;
ALTER USER bdl WITH ENCRYPTED PASSWORD 'mon_mot_de_passe' ;
CREATE DATABASE bdlbois OWNER bdl;
\q

exit

sudo /etc/init.d/postgresql restart

# Pour se connecter à la base :
psql -U bdl -W -h localhost --cluster 10/main -d bdlbois

###### go ######
# dev version :
# go version
# go version go1.14.1 linux/amd64

# todo install go

###### Initialisation des tables ######
cd /path/to/bdl/
cd install/
go run install-bdl.go -i all


###### Lancement du programme ######
cd /path/to/bdl/
cd src/
gin -i --all -a 8000 -p 3012 run main.go

# dans un navigateur web
http://localhost:3000/


###### Install version de test sur serveur ######
go run install-bdl.go -i all
go run install-bdl.go -f acteur
go run install-bdl.go -f stockage
(-f acteur sert à anonymiser)


